{
	"name": "@jeditrader/monorepo",
	"version": "0.0.1",
	"private": true,
	"description": "JediTrader NPM packages",
	"repository": "https://github.com/clickingbuttons/jeditrader.git",
	"author": "clickingbuttons",
	"type": "module",
	"scripts": {
		"start": "npm run build && (npm run watch & npm start --workspace=app)",
		"build": "tsc --build && npm run build --workspace=app",
		"watch": "tsc --build --watch",
		"clean": "tsc --build --clean && npm run clean --workspace=app"
	},
	"workspaces": [
		"providers",
		"linalg",
		"geometry",
		"renderer",
		"app"
	],
	"license": "MIT",
	"devDependencies": {
		"typescript": "^5.1.6"
	}
}
